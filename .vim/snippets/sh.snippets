priority 0

snippet if_command_exists "if command exists..." b
if builtin command -v $1 > /dev/null 2>&1; then
	$2
fi
endsnippet

snippet start_shellscript "create new shellscript" b
#!/bin/bin/env bash
set -ue
set -o pipefail

$1
endsnippet

snippet script_path "get script path" b
script_dir=$(cd $(dirname $0); pwd)
endsnippet

