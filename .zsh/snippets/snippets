# docker privileged args
--privileged --cap-add=SYS_PTRACE --security-opt="seccomp=unconfined"

# docker fuse
--privileged --cap-add=SYS_PTRACE --security-opt="seccomp=unconfined" --cap-add SYS_ADMIN --cap-add MKNOD --device /dev/fuse:mrw

# run dev docker
sudo docker run -it --rm --privileged --cap-add=SYS_PTRACE --security-opt="seccomp=unconfined" --net=dev-net -v ${HOME}:/root/share --name xxx xxx /bin/bash

# ssh & exec dev docker
ssh -tt xxx@xxx -p xxx docker exec -it -e SSH_CLIENT="abc" -e SSH_TTY="xyz" xxx /bin/zsh

# ssh localforward
ssh -A -L local-port:remote-ip:remote-port xxx@xxx

# ssh remoteforward
ssh -A -R local-port:local-ip:remote-port xxx@xxx

# xauth add
xauth add ${DISPLAY} . (token)

# xrandr extend
xrandr --output eDP-1 --primary --output HDMI-1 --mode 1920x1080 --right-of eDP-1

# xrandr mirror
xrandr --output eDP-1 --primary --output HDMI-1 --mode 1920x1080 --same-as eDP-1

# xrandr off
xrandr --output eDP-1 --primary --output HDMI-1 --off

# unix(LF) next line mode
nkf -Lu --overwrite

# remote desktop
xfreerdp /d: /v:ip /u:username /p:password /w:2560 /h:1440 +fonts +compression  +smart-sizing -clipboard -grab-keyboard
